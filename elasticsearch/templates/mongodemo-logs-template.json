{
  "index_patterns": ["mongodemo-logs-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.lifecycle.name": "mongodemo-logs-policy",
    "index.lifecycle.rollover_alias": "mongodemo-logs"
  },
  "mappings": {
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "application": {
        "type": "keyword"
      },
      "environment": {
        "type": "keyword"
      },
      "log_level": {
        "type": "keyword"
      },
      "logger_name": {
        "type": "keyword"
      },
      "thread_name": {
        "type": "keyword"
      },
      "log_message": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "exception": {
        "type": "text"
      },
      "stack_trace": {
        "type": "text"
      },
      "http_method": {
        "type": "keyword"
      },
      "http_path": {
        "type": "keyword"
      },
      "http_status": {
        "type": "integer"
      },
      "http_remote_address": {
        "type": "ip"
      },
      "response_time": {
        "type": "long"
      },
      "user_agent": {
        "type": "text"
      },
      "geoip": {
        "properties": {
          "country_name": {
            "type": "keyword"
          },
          "city_name": {
            "type": "keyword"
          },
          "location": {
            "type": "geo_point"
          }
        }
      },
      "message": {
        "type": "text"
      },
      "host": {
        "properties": {
          "name": {
            "type": "keyword"
          }
        }
      }
    }
  }
}

